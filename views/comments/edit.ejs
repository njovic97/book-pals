<%- include('../partials/header'); %>

<div class="container">
    <div class="col-md-12">
        <h1 class="text-center formTitle">Edit comment</h1>
    </div>
    <div class=" col-lg-6 offset-lg-3">
        <form action="/books/<%= book_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]" id="text">
            </div>
            <div class="form-group">
                <button class="btn btn-outline-success btn-block">Submit!</button>
            </div>
            <a href="/books">Go Back</a>
        </form>
    </div>

    <%- include('../partials/footer'); %>