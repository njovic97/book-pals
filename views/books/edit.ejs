<%- include('../partials/header'); %>

<div class="container">
    <div class="col-md-12">
        <h1 class="text-center formTitle">Edit: <%= book.title %></h1>
    </div>
    <div class="col-lg-6 offset-lg-3">
        <form action="/books/<%= book._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
            <fieldset class="form-group">
                <input class="form-control" type="text" value="<%= book.title %>" name="book[title]" id="title">
            </fieldset>
            <div>
                <p>Upload Image:</p>
            </div>
            <fieldset class="form-group">
                <input type="file" id="image" name="image" accept="image/*">
            </fieldset>
            <fieldset class="form-group">
                <input class="form-control" type="text" value="<%= book.description %>" name="book[description]"
                    id="description">
            </fieldset>
            <fieldset class="form-group">
                <input class="form-control" type="number" value="<%= book.grade %>" name="book[grade]" id="grade"
                    min="1" step="1" max="5">
            </fieldset>
            <div class="form-group">
                <button class="btn btn-outline-success btn-block">Submit!</button>
            </div>
            <a href="/books">Go Back</a>
        </form>
    </div>

    <%- include('../partials/footer'); %>