<%- include('../partials/header'); %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center formTitle">Add a new Book!</h1>
        </div>
        <div class="col-lg-6 offset-lg-3">
            <form class="newBookForm" action="/books" method="POST" enctype="multipart/form-data">
                <fieldset class="form-group">
                    <label for="title">Title:</label>
                    <input class="form-control" type="text" name="book[title]" id="title">
                </fieldset>
                <div>
                    <p>Upload Image:</p>
                </div>
                <fieldset class="form-group">
                    <input type="file" id="image" name="image" accept="image/*" required>
                </fieldset>
                <fieldset class="form-group">
                    <label for="description">Description:</label>
                    <input class="form-control" type="text" name="book[description]" id="description">
                </fieldset>
                <fieldset class="form-group">
                    <label for="grade">Grade:</label>
                    <input class="form-control" type="number" name="book[grade]" id="grade" min="1" step="1" max="5">
                </fieldset>
                <div class="form-group">
                    <button class="btn btn-outline-success btn-block">Submit!</button>
                </div>
                <a href="/books">Go Back</a>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>