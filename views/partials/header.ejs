<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>N | J BookPals</title>
    <script src="https://kit.fontawesome.com/035cbc1ef6.js" crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark">
        <a class="navbar-brand" href="/">N | J BookPals</a>
        <div class="navbar-header">
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse"
                aria-expanded="false" aria-controls="navbarCollapse" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div id="navbarCollapse" class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a
                        class="nav-link" href="/books"><i class="far fa-compass"></i> Books</a></li>
                <li class="nav-item"><a class="btn btn-outline-info" href="/books/new"><i class="fas fa-plus"></i> Add a
                        Book</a></li>
            </ul>
            <ul class="navbar-nav navbar-right">
                <% if(!currentUser){ %>
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a
                        class="nav-link" href="/login">Login</a></li>
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a
                        class="nav-link" href="/register">Sign Up</a></li>
                <% } else { %>
                <div class="nav-item dropdown dropdown-profile">
                    <a class="nav-link  dropdown-toggle navbar-profile-image-nav-link" href="#" id="navbarDropdown"
                        role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img width="25" height="25" class="rounded-circle" id="navbar-profile-image"
                            src="<%= currentUser.avatar %>" alt="<%= currentUser.username; %>" />
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <div class="container-fluid">
                            <span
                                class="d-block w-100 font-weight-bold"><%= currentUser.firstName + " " + currentUser.lastName; %></span>
                            <span class="d-block w-100 font-italic"><%= currentUser.email; %></span>
                        </div>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item nav-link-not-button" href="/users/<%= currentUser._id %>">
                            <i class="fas fa-user"></i><span class="button-text-ml"> Profile</span>
                        </a>
                        <a class="dropdown-item nav-link-not-button" href="/logout">
                            <i class="fas fa-sign-out-alt"></i><span class="button-text-ml"> Logout</span>
                        </a>
                    </div>
                </div>
                <% } %>
            </ul>
    </nav>
    <div class="center">
        <% if(error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert"><i class="fas fa-exclamation"></i> <%= error %></div>
    </div>
    <% } %>
    <% if(success && success.length > 0) { %>
    <div class="alert alert-success" role="alert"><i class="fas fa-check"></i> <%= success %></div>
    </div>
    <% } %>
    </div>