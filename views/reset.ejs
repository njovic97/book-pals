<%- include('./partials/header'); %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center formTitle">Reset Password!</h1>
        </div>
        <div class="col-lg-6 offset-lg-3">
            <form action="/reset/<%= token %>" method="POST">
                <fieldset class="form-group">
                    <input type="password" name="password" value="" autofocus="autofocus" class="form-control" />
                    <label for="password">New Password</label>
                </fieldset>
                <fieldset class="form-group">
                    <input type="password" name="confirm" value="" class="form-control" />
                    <label for="confirm">Confirm Password</label>
                </fieldset>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-success btn-block">Update Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer'); %>